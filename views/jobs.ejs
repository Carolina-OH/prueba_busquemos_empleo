    <label>País</label><br>
      <select name="select" class='custom-select my-1 mr-sm-2' id="pais">
        <option value="value1" selected disabled>...</option> 
        <option value="value2">usa</option>
        <option value="value3">Canada</option>
      </select>
      <br><br>
      <label>Afinidad</label><br>
      <select name="select" class='custom-select my-1 mr-sm-2' id="afinidad">
        <option value="value1" selected disabled>...</option> 
        <option value="value2">Developer</option>
        <option value="value3">UX</option>
        <option value="value4">Python</option>
        <option value="value5">Javascript</option>
        <option value="value6">php</option>
      </select>
      <br><br>
      <button class="btn btn-primary" id="buscar">Buscar</button>
    </form>
    </div>
    <section class="col-8" id="jobsContainer">
    </section>
    </div>  
     
    <script src="/jquery/jquery.js"></script>
    <script src="/axios/axios.min.js"></script>
    <script src="actions/actions.js"></script>  
  </body>
</html>